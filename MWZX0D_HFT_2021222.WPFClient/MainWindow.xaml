<Window x:Class="MWZX0D_HFT_2021222.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MWZX0D_HFT_2021222.WPFClient"
        mc:Ignorable="d"
        Title="Menu" MinHeight="280" MinWidth="300" Height="280" Width="300" Background="#171717">
    <Window.DataContext>
        <local:MainWindowViewModel></local:MainWindowViewModel>
    </Window.DataContext>
    <StackPanel Margin="10">
        <Button Height="40" Margin="5" Command="{Binding OpenDriversWindowCommand}" Content="Drivers"></Button>
        <Button Height="40" Margin="5" Command="{Binding OpenTeamsWindowCommand}" Content="Teams"></Button>
        <Button Height="40" Margin="5" Command="{Binding OpenEngineManufacturersWindowCommand}" Content="Engine Manufacturers"></Button>
        <Button Height="40" Margin="5" Background="#FE7272" Command="{Binding ExitCommand}" Content="Exit"></Button>
    </StackPanel>
</Window>
